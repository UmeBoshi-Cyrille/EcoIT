{% extends 'base.html.twig' %}

{% block title %}apply{% endblock %}
{% block styleSheets %}
    <link rel="stylesheet" href="{{ asset('assets/pages/apply.css') }}">
{% endblock %}

{% block header %}
    {% include "base/_header.html.twig" %}
{% endblock %}

{% block main %}

    <section>
        <div class="apply_wrapper">
            <div class="apply_title key_bg2">
                <h2 class="apply_h2 key_ftdw font-f1">Postuler</h2>
            </div>
            <div class="apply_container key_bg1">
                <div class="img-box">
                    <img class ="apply_img" 
                         src="{{ asset('assets/storage/image/astronaut-outerspace.png') }}" 
                         alt="astronaut outer-space"
                         title="title="https://www.freepng.fr"">
                </div>
                <div class="form_box key_bg3">
                    <form action="" method="post">
                        <label class ="key_ftdw font-f2" for="name"><strong>Nom</strong></label>
                        <input type="text" id="name" name="_surname" placeholder="Nom"/>
                        <label class ="key_ftdw font-f2" for="name"><strong>Prénom</strong></label>
                        <input type="text" id="name" name="_surname" placeholder="Prénom"/>
                        <label class ="key_ftdw font-f2" for="username"><strong>Email</strong></label>
                        <input type="text" id="username" name="_username" placeholder="Enter Email"/>
                        <label class ="key_ftdw font-f2" for="password"><strong>Password</strong></label>
                        <input type="password"  id="password" name="_password" placeholder="Enter Password"/>
                        <label class ="key_ftdw font-f2" for="description"><strong>Spécialités</strong></label>
                        <textarea id="description" name="_description" placeholder="Enter a description" rows="6" cols="50"/></textarea>
                        <label class ="key_ftdw font-f2" for="file"><strong>Importer votre photo</strong></label>
                        <input type="file" id="file" name="_file">
                        {# Control Url user is redirected to on success 
                        <input type="hidden" name="_target_path" value="/account"/> #}
                        <button class="button_apply key_ftw font-f3 key_bggreen" type="submit">Postuler</button>
                    </form>
                    <div class="cancel_box key_bg1">
                        <form action="{{path('home')}}">
                            <button class="button_cancel key_ftw font-f3 key_bgred" type="submit">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}