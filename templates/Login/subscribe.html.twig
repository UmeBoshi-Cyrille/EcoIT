{% extends 'base.html.twig' %}

{% block title %}Subscribe{% endblock %}
{% block styleSheets %}
    <link rel="stylesheet" href="{{ asset('assets/pages/subscribe.css') }}">
{% endblock %}

{% block navlist %}
    <li class="hd-li1"></li>
    <li class="hd-li right font-f1">
        <a class="key_ftdw" href="">Formations</a>
    </li>
    <li class="hd-li left font-f1">
        <a class="key_ftdw" href="{{path('apply')}}">Postuler</a>             
    </li>
    <li class="hd-li right font-f1">
        <a class="key_ftdw" href="">Contact</a>   
    </li>
    <li class="hd-li hd_home-li left font-f1 key_bg3">
        <a class="nav_a key_ftdw" href="{{path('subscribe')}}">S'incrire</a>           
    </li><hr>
    <li class="hd-li hd_home-li right font-f1 key_bg3">
        <a class="nav_a key_ftdw" href="{{path('login')}}">Connexion</a>              
    </li>
{% endblock %}

{% block main %}

    <section>
        <div class="subscribe_wrapper">
            <div class="subscribe_title key_bg2">
                <h2 class="subscribe_h2 key_ftdw font-f1">Inscription</h2>
            </div>
            <div class="subscribe_container key_bg1">
                <div class="img-box">
                    <img class ="subscribe_img" src="{{ asset('assets/storage/image/astronaut-subscribe.png') }}" alt="astronaut inviting you">
                </div>
                <div class="form_box key_bg3">
                    <form action="" method="post">
                        <label class ="key_ftdw font-f2" for="pseudo"><strong>Pseudonyme</strong></label>
                        <input type="text" id="pseudo" name="_pseudo" placeholder="Pseudonyme"/>
                        <label class ="key_ftdw font-f2" for="username"><strong>Email</strong></label>
                        <input type="text" id="username" name="_username" placeholder="Enter Email"/>
                        <label class ="key_ftdw font-f2" for="password"><strong>Password</strong></label>
                        <input type="password"  id="password" name="_password" placeholder="Enter Password"/>
                        {# Control Url user is redirected to on success 
                        <input type="hidden" name="_target_path" value="/account"/> #}
                        <button class="button_subscribe key_ftw font-f3 key_bggreen" type="submit">S'incrire</button>
                    </form>
                    <div class="cancel_box key_bg1">
                        <form action="{{path('home')}}">
                            <button class="button_cancel key_ftw font-f3 key_bgred" type="submit">Cancel</button>
                        </form>
                        <span class="span_connexion key_ftdw font-f3"><a class="key_ftd" href="{{path('login')}}">Connexion</a></span>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}