{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}
{% block styleSheets %}
    <link rel="stylesheet" href="{{ asset('assets/instructor_adminPages/instructors_admin.css') }}">
{% endblock %}

{% block header %}
    {% include "base/_header.html.twig" %}
{% endblock %}

{% block main %}

    <section class="section_head">
        <div class="formation_headwrapper">
            <div class="formation_pagetitle">
                <h2 class="formation_h2 key_ftdw font-f1">Liste des instructeurs</h2>
            </div>
            <form class="searchbar" action=""> 
            {# {{ path('search') }} #}
                <input class="input_searchtext" type="text" name="search">
                <button class="button_search" type="submit" >
                    <img class="search_icon" src="{{ asset('assets/storage/icons/search.png') }}" 
                        alt="Une loupe de recherche"
                        title="Icon by MD Badsha Meah : https://freeicons.io/profile/3335">
                </button>
            </form>
        </div>
    </section>
    <section class="section_main">
        {% for instructor in instructors %}    
            <div class="formation_globalwrapper">
                <div class="formation_container key_bg2">
                    <div class="formation_title">
                        <h3 class="formation_h3 key_ftdw font-f1">{{instructor.name}} {{instructor.surname}}</h3>
                        <p class="key_ftdw font-f2">{{ instructor.email}}</p>
                    </div>
                    <div class="instructor_imgbox">
                        <img class="instructor_img" src="{{ vich_uploader_asset(instructor, 'imageFile') }}" alt="photo de l'instructeur">
                    </div>
                    <a class="delete_button key_bg3" href="{{ path('admin_instructor_delete', {'id': instructor.id}) }}">
                        <img src="{{ asset('assets/storage/icons/corbeille.png') }}" 
                            alt="icone poubelle" 
                            title="icon by : https://icons8.com/icon/9deX0HJ5iAFS/poubelle">
                    </a>
                    {# <div class="instructor_buttons key_bg3">
                        <form class="intructor_input key_bg1" action="">
                            <label class ="key_ftdw font-f2" for="username">
                                <span class="instructor_span">Open Account :</span>
                                <input class="instructor_checkbox" type="checkbox" name="remember">
                            </label>
                        </form>
                    </div> #}
                </div>
                <button class="preview_button key_bg3" 
                        id="preview-btn" 
                        onclick="dropdown(this)"
                        style="background-color: #57cc99">
                    <img src="{{ asset('assets/storage/icons/read.png') }}" 
                        alt="icone livre ouvert" 
                        title="icon by : https://icons8.com/icon/jlJLS7OQV1fO/lire">
                </button>
                <div class="preview-box key_bg1" id="preview_dropdown">
                    <p class="preview_p key_ftdw font-f3">{{ instructor.description }}</p>
                </div>
            </div>        
        {% endfor %}
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/formations_visite.js') }}"></script>
{% endblock %}